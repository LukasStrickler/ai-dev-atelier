{
  "_comment": "MCP (Model Context Protocol) Configuration Example",
  "_instructions": "Copy this file to your MCP configuration location (e.g., ~/.config/claude/mcp.json for Claude Desktop) and update API keys",
  "mcpServers": {
    "tavily-remote-mcp": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.tavily.com/mcp/?tavilyApiKey=TAVILY_API_KEY"],
      "env": {}
    },
    "context7": {
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "CONTEXT7_API_KEY"
      }
    },
    "openalex-research": {
      "_description": "OpenAlex MCP - Academic paper discovery and citation analysis. Required for 'research' skill.",
      "command": "npx",
      "args": ["-y", "openalex-research-mcp"],
      "env": {
        "OPENALEX_EMAIL": "you@example.com"
      }    },
    "pdf-reader": {
      "_description": "PDF Reader MCP - PDF text extraction. Required for 'research' skill.",
      "command": "npx",
      "args": ["-y", "@sylphx/pdf-reader-mcp"]
    },
    "paper-search": {
      "_description": "Paper-search MCP - Multi-platform academic paper search and download. Optional for 'research' skill.",
      "_note": "Includes Google Scholar + Sci-Hub integration. Check Terms of Service and legal considerations.",
      "command": "npx",
      "args": ["-y", "paper-search-mcp-nodejs"]
    }
  }
}
