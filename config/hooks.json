{
  "version": "1.0.0",
  "hooks": {
    "PreToolUse": [
      {
        "id": "graphite-block",
        "description": "Blocks git push/checkout -b/gh pr create in Graphite repos",
        "matcher": "Bash",
        "script": "skills/use-graphite/scripts/graphite-block-hook.sh",
        "enabled": true
      },
      {
        "id": "pr-comments-block",
        "description": "Blocks gh api for PR comments on current repo (use resolve-pr-comments skill)",
        "matcher": "Bash",
        "script": "skills/resolve-pr-comments/scripts/pr-comments-block-hook.sh",
        "enabled": true
      },
      {
        "id": "release-block",
        "description": "Blocks AI from triggering releases (requires human approval)",
        "matcher": "Bash",
        "script": "hooks/release-block-hook.sh",
        "enabled": true
      }
    ]
  }
}
