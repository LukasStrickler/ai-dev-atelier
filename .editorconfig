# EditorConfig for ai-dev-atelier
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
# shfmt-specific properties (recognized by shfmt via editorconfig)
shell_variant = bash
binary_next_line = true
switch_case_indent = true
space_redirects = true
keep_padding = false

[*.md]
# Markdown uses trailing spaces for line breaks
trim_trailing_whitespace = false

[{*.json,*.yaml,*.yml}]
indent_size = 2

[Makefile]
indent_style = tab
